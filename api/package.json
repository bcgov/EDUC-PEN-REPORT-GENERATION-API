{
  "name": "pen-report-generator-api",
  "version": "1.0.0",
  "description": "This API will contain different report templates and generate reports utilising CDOGS API.",
  "repository": "https://github.com/bcgov/EDUC-PEN-REPORT-GENERATION-API",
  "license": "Apache-2.0",
  "authors": [
    "EDUC-PEN-TEAM"
  ],
  "scripts": {
    "build": "ts-node build.ts",
    "lint": "eslint . --no-fix --ignore-pattern 'node_modules' --ext .ts",
    "start": "node --max-old-space-size=100 -r module-alias/register ./dist/src/report-generation-application.js",
    "start:dev": "nodemon",
    "lint:fix": "eslint . --fix --ignore-pattern 'node_modules' --ext .ts",
    "clean": "ts-node clean.ts",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "ts, html, json",
    "ignore": [
      "src/public"
    ],
    "exec": "node  --max-old-space-size=260 -- node_modules/ts-node/dist/bin -P tsconfig.json ./src/report-generation-application.ts --NODE_ENV=local"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "eslintIgnore": [
    "build.ts",
    "clean.ts"
  ],
  "dependencies": {
    "@js-joda/core": "^3.2.0",
    "async-retry": "^1.3.1",
    "axios": "0.21.1",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "command-line-args": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "form-data": "^3.0.0",
    "has-ansi": "^4.0.0",
    "helmet": "^4.3.1",
    "inversify": "^5.0.5",
    "ioredis": "^4.27.6",
    "jet-logger": "^1.0.4",
    "jose": "^3.5.1",
    "jsonfile": "^6.1.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "nats": "^1.4.12",
    "nconf": "^0.11.1",
    "nocache": "^2.1.0",
    "prom-client": "^13.0.0",
    "reflect-metadata": "^0.1.13",
    "serve-favicon": "^2.5.0",
    "stream": "0.0.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.6",
    "@types/ioredis": "^4.19.0",
    "@types/jest": "^26.0.20",
    "@types/jsonfile": "^6.0.0",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.21",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.0.5",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "find": "^0.3.0",
    "fs-extra": "^9.0.1",
    "jest": "^26.6.3",
    "mock-nats-client": "^0.2.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.1",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.5"
  }
}
